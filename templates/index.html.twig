        <div id="status_error"></div>

        <textarea id="status_box" placeholder="Write a status here"></textarea>
        <button id="status_btn">Post Status</button>

    </div>
    <div id="feed">
        <div id="loader">Loading...</div>
    </div>

    <script src="post_status.js"></script>
{% endblock %}
